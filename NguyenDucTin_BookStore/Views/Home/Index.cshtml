@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BookModel>
<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to bookstore</h1>

        <p class="lead text-muted">

            Bacon ipsum dolor amet pork loin bresaola bacon biltong meatball swine drumstick ground round ham venison. Strip steak doner chuck, porchetta cow boudin jowl tri-tip chicken ribeye turkey pancetta sirloin capicola fatback. Boudin biltong strip steak pork salami andouille flank jowl. Kevin prosciutto bacon venison meatloaf pork burgdoggen pork belly, jowl pig tongue pork loin pork chop.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search books</a>
        </p>

    </div>
</section>
<div class="py-5 bg-light">
    <div class="container">
        <h3 class="display-4">All books</h3>
        <div class="row">

            @foreach (var item in Model)
            {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    
                    <img src="@(string.IsNullOrEmpty(item.ImageName)?"/images/noimage.png": ("~/Image/"+item.ImageName))" asp-append-version="true" class="img-thumbnail" />
                    <div class="card-body">
                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@item.BookId" class="btn -btn-sm btn-outline-secondary">view details</a>
                            </div>
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.Author)</small>
                        </div>
                    </div>
                </div>
            </div>
                    }

        </div>
    </div>
</div>
